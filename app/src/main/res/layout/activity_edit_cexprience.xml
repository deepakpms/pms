<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:id="@+id/scategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textSize="20dp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/rskills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtSkills"
                    android:id="@+id/statusgroup"
                    android:background="#fff"
                    android:layout_marginTop="5dp"
                    >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/addskills"
                        android:layout_centerVertical="true"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textColor="#000000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/skills"
                                android:paddingLeft="7dp"
                                android:textSize="20dp"
                                android:layout_centerVertical="true"
                                android:hint="Select Skills"
                                android:text="Select Skills"
                                />
                        </RelativeLayout>
                    </ScrollView>

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:id="@+id/addskills"
                        android:layout_alignParentRight="true"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/addmore"
                                android:id="@+id/image"
                                />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            <Button
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:id="@+id/edit_skill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Done"
                android:textSize="15sp"
                android:background="@drawable/buttonstyle"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>