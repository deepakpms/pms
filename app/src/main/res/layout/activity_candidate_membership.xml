<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_candidate_membership"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/slide1"
    tools:context="com.cvvid.activities.candidate.CandidateMembership">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/basicname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="BASIC FREE"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/basicprice"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/capsule"
                            android:gravity="center"
                            android:text="$0"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/btxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create your own CVVid profile"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/btxt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload your portfolio"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/btxt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse all vacancies"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/btxt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create your CVVid profile PDF"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btn_acion_basic"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Basic Account"
                        android:textSize="15sp"
                        android:background="@drawable/buttonstyle"
                        />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/premiumname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="PREMIUM"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/premiumprice"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/capsule"
                            android:gravity="center"
                            android:text="$252.00"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/ptxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse and apply for jobs"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/ptxt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unique real-time messaging platform"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/ptxt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See who has visited your profile"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/ptxt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See who has liked your profile"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btn_premium_action"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Premium Account"
                        android:textSize="15sp"
                        android:background="@drawable/buttonstyle"
                        />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>

</ScrollView>


</LinearLayout>
