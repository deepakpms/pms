<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeSpinner">

        <!-- Color when pressed -->
        <item name="colorAccent">@color/white</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/white_greyish</item>
    </style>

    <style name="ThemeSpinnerJS">
        <item name="android:textColor">#FFF</item>
        <!-- Color when pressed -->
        <item name="colorAccent">@color/white</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/white_greyish</item>
    </style>
    
    <style name="SwithTheme">
        <item name="colorAccent">@color/colorSwitch</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFF</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="EditTextHintSelect" parent="Theme.Design.NoActionBar">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="CardLabel">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:padding">@dimen/items_inbetween_medium</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CardInput">
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:layout_marginRight">@dimen/items_inbetween</item>
        <item name="android:layout_marginTop">@dimen/items_inbetween</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/items_inbetween_medium</item>
    </style>


    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>
