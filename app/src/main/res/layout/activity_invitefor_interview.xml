<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.employer.InviteforInterview">

    <LinearLayout
        android:id="@+id/menuheader"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_back"
            android:textColor="@android:color/black"
            android:textSize="28dp"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_30dp"
            android:textAllCaps="true"
            android:text="Invite for Interview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.v7.widget.CardView

        android:layout_below="@+id/menuheader"
        android:layout_margin="20dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="40dp"
            android:id="@+id/input_interview_date"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:clickable="true"
                android:focusable="false"
                android:text="12/5/2018"
                android:id="@+id/interview_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Interview Date" />

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_interview_time"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:clickable="true"
                    android:focusable="false"
                    android:text="5:29 PM"
                    android:id="@+id/interview_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Interview Time" />

            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_message"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:gravity="top"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Message" />

        </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:id="@+id/btn_invite"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:textSize="15sp"
                android:background="@drawable/buttonstyle"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>